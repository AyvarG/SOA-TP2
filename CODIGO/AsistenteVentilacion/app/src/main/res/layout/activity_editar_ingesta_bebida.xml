<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grupo10.asistenteingesta.ui.EditarIngestaBebidaActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="254dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="221dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="212dp"
                android:layout_height="40dp"
                android:text="BEBIDA"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtIngestaBebidaNombreNueva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtIngestaBebidaFrecuenciaNueva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:ems="10"
                android:hint="Frecuencia"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="251dp"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarBebidaNueva"
                android:layout_width="110dp"
                android:layout_height="64dp"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnCancelarBebidaNueva"
                android:layout_width="120dp"
                android:layout_height="63dp"
                android:layout_marginLeft="20sp"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgbBebidaNueva"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
