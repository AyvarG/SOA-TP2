<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="369dp"
        android:layout_height="347dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="362dp"
        android:layout_height="37dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:text="HISTORIAL"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLimpiarHistorial"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Limpiar"
            android:textColor="#E53935"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="373dp"
        android:layout_height="61dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="272dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="BEBIDA"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblBebidaNombre"
                android:layout_width="177dp"
                android:layout_height="19dp"
                android:layout_marginLeft="20sp"
                android:text="Nombre: -" />

            <TextView
                android:id="@+id/lblBebidaFrecuencia"
                android:layout_width="177dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20sp"
                android:text="Frecuencia: -" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditarBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/ic_action_editar" />

        <ImageButton
            android:id="@+id/btnEliminarBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_eliminar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="62dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDICAMENTO"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMedicamentoNombre"
                android:layout_width="181dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20sp"
                android:text="Nombre: -" />

            <TextView
                android:id="@+id/lblMedicamentoFrecuencia"
                android:layout_width="180dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20sp"
                android:text="Frecuencia: -" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditarMedicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_editar" />

        <ImageButton
            android:id="@+id/btnEliminarMedicamento"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="18sp"
            app:srcCompat="@drawable/ic_action_eliminar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>